{
    "compilerOptions": {
      "sourceMap": true,
      "esModuleInterop": true,
      "allowJs": true, //set to false after migration complete
      "noImplicitAny": true,
      "moduleResolution": "node",
      "lib": ["es2018"],
      "module": "esnext",
      "target": "es2018",
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*", "src/types/*"]
      },
      "typeRoots": ["node_modules/@types", "src/types"],
      "outDir": "./built"
    },
    "include": ["./src/**/*", "serverDeclarations.d.ts", "server.ts"],
    "exclude": ["node_modules"]
  }